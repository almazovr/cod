        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yes"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="831">
    <Grid Margin="0,0,10,0">
        <TextBlock Text="МедЛаб" FontSize="20" FontWeight="Bold" Margin="10,10,10,372" TextAlignment="Center" RenderTransformOrigin="0.506,1.366"/>

        <Button x:Name="Voiti" Content="Войти" Grid.Row="0" Background="#FF7CFB44" Margin="0,0,0,110" RenderTransformOrigin="0.508,1.154" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="261" Click="Voiti_Click"/>

        <TextBox x:Name="Login" Margin="0,128,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Center" Width="261"/>
        <PasswordBox x:Name="Password" Margin="0,179,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Center" Width="261" />

    </Grid>
</Window>
