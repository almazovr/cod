<Window x:Class="yes.OrderManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yes"
        mc:Ignorable="d"
        Title="OrderManagement" Height="460" Width="831">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="193*"/>
            <RowDefinition Height="251*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Управление заказами" FontSize="20" FontWeight="Bold" Margin="10,10,10,110" TextAlignment="Center" RenderTransformOrigin="0.506,1.366"/>

        <Button x:Name="Voiti" Content="Назад" Grid.Row="1" Margin="0,189,0,0" RenderTransformOrigin="0.508,1.154" HorizontalAlignment="Center" Width="261" Click="Voiti_Click" Height="45" VerticalAlignment="Top"/>
        <Button x:Name="Delete" Content="Удалить" Grid.Row="1" Margin="0,122,0,0" RenderTransformOrigin="0.508,1.154" Height="34" VerticalAlignment="Top" HorizontalAlignment="Center" Width="157" Click="Delete_Click"/>
        <Button x:Name="Add" Content="Добавить" Grid.Row="1" Margin="156,122,0,0" RenderTransformOrigin="0.508,1.154" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" Click="Add_Click"/>
        <Button x:Name="Edit" Content="Редактировать" Grid.Row="1" Margin="508,122,0,0" RenderTransformOrigin="0.508,1.154" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" Click="Edit_Click"/>
        <DataGrid x:Name="Ordrs" Margin="0,72,348,0" Height="208" VerticalAlignment="Top" HorizontalAlignment="Right" Width="463" Grid.RowSpan="2"/>

        <TextBox x:Name="Order1" Margin="517,85,0,0" HorizontalAlignment="Left" Width="294" Height="33" VerticalAlignment="Top"/>
        <TextBox x:Name="Order2" Margin="517,123,0,0" HorizontalAlignment="Left" Width="294" Height="33" VerticalAlignment="Top"/>
        <TextBox x:Name="Order" Margin="517,161,0,0" HorizontalAlignment="Left" Width="294" Height="33" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox x:Name="Patient" Margin="517,11,0,0" HorizontalAlignment="Left" Width="294" Height="33" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="Information" Margin="517,49,0,0" HorizontalAlignment="Left" Width="294" Height="33" VerticalAlignment="Top" Grid.Row="1"/>
    </Grid>
</Window>
