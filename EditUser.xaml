<Window x:Class="yes.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yes"
        mc:Ignorable="d"
        Title="EditUser" Height="460" Width="831">
    <Grid Margin="0,0,10,0">
        <TextBlock Text="Редактировать пользователя" FontSize="20" FontWeight="Bold" Margin="10,10,10,372" TextAlignment="Center" RenderTransformOrigin="0.506,1.366"/>

        <Button x:Name="Voiti" Content="Назад" Grid.Row="0" Margin="0,382,0,0" RenderTransformOrigin="0.508,1.154" Height="45" VerticalAlignment="Top" HorizontalAlignment="Center" Width="261" Click="Voiti_Click"/>

        <TextBox x:Name="User" Margin="0,128,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Center" Width="261"/>
        <TextBox x:Name="Phone" Margin="0,175,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Center" Width="261"/>
        <TextBox x:Name="Data" Margin="0,222,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Center" Width="261"/>
        <Button x:Name="cancellation" Content="Отмена" Grid.Row="0" Margin="158,326,0,0" RenderTransformOrigin="0.508,1.154" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157"/>
        <Button x:Name="save" Content="Сохранить" Grid.Row="0" Margin="510,326,0,0" RenderTransformOrigin="0.508,1.154" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157"/>

    </Grid>
</Window>
